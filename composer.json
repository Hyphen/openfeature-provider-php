{
    "name": "hyphen/openfeature-server-provider",
    "description": "The official Hyphen Toggle OpenFeature Provider for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "@hyphen"
        }
    ],
    "require": {
        "open-feature/sdk": "^2.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.65"
    },
    "autoload": {
        "psr-4": {
            "Hyphen\\OpenFeature\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyphen\\OpenFeature\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix src --dry-run",
        "fix": "php-cs-fixer fix src",
        "analyze": "phpstan analyse"
    },
    "support": {
        "issues": "https://github.com/Hyphen/openfeature-provider-php-server/issues",
        "source": "https://github.com/Hyphen/openfeature-provider-php-server"
    },
    "keywords": [
        "toggle",
        "openfeature",
        "provider",
        "hyphen"
    ]
}
